{
	"name": "notify",
	"version": "0.0.1",
	"description": "web 2.0 style notification systems for discord, email, and sms",
	"main": "index.js",
	"scripts": {
		"prepare": "husky",
		"start": "export APP_ENV=production && node --no-warnings ./dist/src/server.js",
		"dev": "export APP_ENV=development && npm run db:prepare:dev && tsx watch --no-warnings --clear-screen=false --exclude './src/views/*/*' ./src/server.ts ",
		"build:server": "tsc",
		"build": "npm run build:server",
		"update:deps": "npx npm-check -u",
		"check:deps": "npx depcheck",
		"test:unit": "echo 'not yet'",
		"test:browser:headless": "npx playwright test",
		"test:browser": "npx playwright test --ui",
		"test:watch": "NODE_ENV=testing  vitest",
		"test": "NODE_ENV=testing vitest --run",
		"test:coverage": "NODE_ENV=testing vitest run --coverage",
		"format:check": "prettier --check .",
		"format:verbose": "prettier --write --cache .",
		"format": "prettier --write --cache . > /dev/null",
		"lint:check": "eslint .",
		"lint": "eslint --fix --cache .",
		"db:prepare:dev": "npm run db:migrate:latest && npm run db:seed:run",
		"db:prepare:prod": "npm run db:migrate:latest:prod",
		"db:migrate:make": "tsx ./node_modules/knex/bin/cli.js migrate:make --knexfile=./src/db/knexfile.ts",
		"db:migrate:latest:prod": "knex migrate:latest --knexfile=./dist/src/db/knexfile.js",
		"db:migrate:latest": "tsx ./node_modules/knex/bin/cli.js migrate:latest --knexfile=./src/db/knexfile.ts",
		"db:migrate:rollback": "tsx ./node_modules/knex/bin/cli.js migrate:rollback --knexfile=./src/db/knexfile.ts",
		"db:migrate:rollback:prod": "knex migrate:rollback --knexfile=./dist/src/db/knexfile.js",
		"db:seed:make": "tsx ./node_modules/knex/bin/cli.js seed:make --knexfile=./src/db/knexfile.ts",
		"db:seed:run": "tsx ./node_modules/knex/bin/cli.js seed:run --knexfile=./src/db/knexfile.ts",
		"db:seed:run:prod": "knex seed:run --knexfile=./dist/src/db/knexfile.js"
	},
	"keywords": [
		"discord",
		"sms",
		"email",
		"notification"
	],
	"author": "wajeht",
	"license": "MIT",
	"engines": {
		"node": ">=22.3.0"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.777.0",
		"@aws-sdk/s3-request-presigner": "^3.777.0",
		"axios": "^1.8.4",
		"bcrypt": "^5.1.1",
		"bullmq": "^5.13.2",
		"compression": "^1.8.0",
		"connect-flash": "^0.1.1",
		"connect-redis": "^7.1.1",
		"cors": "^2.8.5",
		"csrf-sync": "^4.1.0",
		"dayjs": "^1.11.13",
		"dotenv": "^16.4.7",
		"ejs": "^3.1.10",
		"express": "^5.0.1",
		"express-ejs-layouts": "^2.5.1",
		"express-rate-limit": "^7.5.0",
		"express-session": "^1.18.1",
		"express-validator": "^7.2.1",
		"helmet": "^8.1.0",
		"ioredis": "^5.4.2",
		"jsonwebtoken": "^9.0.2",
		"knex": "^3.1.0",
		"knex-paginate": "^3.2.0",
		"nodemailer": "^6.10.0",
		"pg": "^8.14.1",
		"pino": "^9.6.0",
		"pino-pretty": "^13.0.0",
		"rate-limit-redis": "^4.2.0",
		"twilio": "^5.5.1"
	},
	"devDependencies": {
		"@faker-js/faker": "^9.6.0",
		"@playwright/test": "^1.51.1",
		"@tailwindcss/typography": "^0.5.16",
		"@types/bcrypt": "^5.0.2",
		"@types/compression": "^1.7.5",
		"@types/connect-flash": "^0.0.40",
		"@types/cors": "^2.8.17",
		"@types/ejs": "^3.1.5",
		"@types/express": "^5.0.1",
		"@types/express-ejs-layouts": "^2.5.4",
		"@types/express-session": "^1.18.1",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/node": "^22.13.14",
		"@types/nodemailer": "^6.4.17",
		"@typescript-eslint/eslint-plugin": "^7.16.1",
		"@typescript-eslint/parser": "^7.18.0",
		"@vitest/coverage-v8": "^2.1.5",
		"@wajeht/express-templates-reload": "^1.0.4",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.5",
		"husky": "^9.1.7",
		"ioredis-mock": "^8.9.0",
		"prettier": "^3.5.3",
		"tsx": "^4.19.3",
		"typescript": "^5.8.2",
		"vitest": "^2.1.5"
	}
}
